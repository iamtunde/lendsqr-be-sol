{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
